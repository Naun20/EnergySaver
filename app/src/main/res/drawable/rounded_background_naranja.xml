<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo amarillo en los bordes -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- Color amarillo para los bordes -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Fondo blanco en el interior -->
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="16dp" /> <!-- Ajusta el radio para un fondo interno más pequeño -->
        </shape>
    </item>
</layer-list>
